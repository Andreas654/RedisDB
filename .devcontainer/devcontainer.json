{
  "name": "Redis Codespace",
  "dockerComposeFile": "docker-compose.yml",
  "service": "dev",
  "workspaceFolder": "/workspaces/RedisDB",
  "shutdownAction": "stopCompose",
  "postCreateCommand": "echo 'Redis wird konfiguriert...' || true",
  "postStartCommand": "bash /workspaces/RedisDB/.devcontainer/start-redis-tunnel.sh",
  "postAttachCommand": "bash /workspaces/RedisDB/.devcontainer/start-redis-tunnel.sh",
  "forwardPorts": [6379],
  "customizations": {
    "vscode": {
      "extensions": [
        "cweijan.vscode-redis-client"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
